<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:local="using:SoftwareKobo.U148.Styles">
    <ResourceDictionary.ThemeDictionaries>
        <ResourceDictionary x:Key="Light">
            <SolidColorBrush x:Key="U148ThemeBrush"
                             Color="#FF9900" />
            <SolidColorBrush x:Key="HeaderBackgroundBrush"
                             Color="#E5E5E5" />
            <SolidColorBrush x:Key="ListBackgroundBrush"
                             Color="#F0F0F0" />
            <SolidColorBrush x:Key="TitleBrush"
                             Color="#333333" />
        </ResourceDictionary>
        <ResourceDictionary x:Key="Dark">
            <SolidColorBrush x:Key="U148ThemeBrush"
                             Color="#B26B00" />
            <SolidColorBrush x:Key="HeaderBackgroundBrush"
                             Color="#1C1C1C" />
            <SolidColorBrush x:Key="ListBackgroundBrush"
                             Color="#222222" />
            <SolidColorBrush x:Key="TitleBrush"
                             Color="#999999" />
        </ResourceDictionary>
    </ResourceDictionary.ThemeDictionaries>
</ResourceDictionary>